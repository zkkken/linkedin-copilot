{
  "manifest_version": 3,
  "name": "LinkedIn Safe Co-Pilot",
  "version": "1.0.0",
  "description": "AI-powered assistant to optimize your LinkedIn profile content safely.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "host_permissions": [
    "http://localhost:5173/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["pdf.worker.min.mjs"],
      "matches": ["<all_urls>"]
    }
  ]
}