{
  "manifest_version": 3,
  "name": "LinkedIn Safe Co-Pilot",
  "version": "1.0.0",
  "description": "AI-powered LinkedIn profile optimizer. Analyze resume (PDF/screenshot/text) and generate ATS-friendly content using Google Gemini AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "LinkedIn Safe Co-Pilot"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["pdf.worker.min.mjs"],
      "matches": ["<all_urls>"]
    }
  ],
  "homepage_url": "https://github.com/zkkken/linkedin-copilot",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}